@{
    ViewData["Title"] = "Wyszukiwanie";
}

@model List<Employee>

<div class="container">
    <div class="card mb-4">
        <div class="row">
            <div class="col offset-md2">
                <div class="card-header bg-primary text-white">
                    <h3>Wyszukaj pracownika</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Search" method="get">
                        <div class="row">
                            <div class="col-3">
                                <div class="form-group mb-3">
                                    <input class="form-control" type="text" name="firstName" placeholder="Imię pracownika" />
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group mb-3">
                                    <input class="form-control" type="text" name="lastName" placeholder="Nazwisko pracownika" />
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group mb-3">
                                    <input class="form-control" type="text" name="pesel" placeholder="Pesel pracownika" />
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group mb-3">
                                    <input class="form-control" type="text" name="city" placeholder="Miasto" />
                                </div>
                            </div>
                            <div class="d-flex justify-content-between my-3">
                                <a asp-action="Index" asp-controller="Employee" class="btn btn-danger">Anuluj</a>
                                <button type="submit" class="btn btn-success">Szukaj</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>



    @if (Model.Count == 0)
    {
        <p>Brak danych</p>
    }
    else
    {
        <partial name="_EmployeesTable" model="Model" />
    }
</div>



