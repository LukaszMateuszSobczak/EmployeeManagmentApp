@{
    ViewData["Title"] = "Pracownicy";
}

@{
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show position-absolute bottom-0 end-0 me-4 mb-4" role="alert">
        @successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@model List<Employee>


<div class="conatiner mb-3">
    <div class="row">
        <div class="col-6">
            <h2>Pracownicy</h2>
        </div>
        <div class="col-6 text-end d-flex flex-row justify-content-between">
            <div class="d-flex gap-4">
                <form asp-action="ExportToExcel" method="post">
                    <button type="submit" class="btn btn-primary">Exportuj do excela</button>
                </form>
                <form asp-action="ExportToCsv" method="post">
                    <button type="submit" class="btn btn-primary">Exportuj do csv</button>
                </form>
            </div>
            <div>
                <a asp-action="Create" class="btn btn-success">Dodaj pracownika</a>
            </div>
        </div>

    </div>

</div>


<partial name="_EmployeesTable" model="Model" />


